.color  
  width var(--size) 
  height var(--size) 
  display block 
  appearance none 
  border-radius 4px 
  cursor pointer 
  position relative 
  padding 10px 
  transition all 0.1s ease-in 
  animation appear 0.1s ease-in
  box-shadow 0 -3px 0 0 rgba(0, 0, 0, 0.2) inset

@keyframes appear  
  from  
    opacity 0 
    transform scale(0.2)

  to  
    opacity 1 
    transform scale(1)

.color:hover  
  outline 2px solid $gray
  box-shadow 0px -1px 0px 0px rgba(0, 0, 0, 0.2) inset

.color:checked  
  outline 2px solid $white
  outline-offset 2px 
 
