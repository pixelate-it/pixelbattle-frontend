.coordinates  
  display flex 
  gap 12px 
  max-width 400px

.groups  
  display flex 
  flex-direction column 
  gap 18px

.group  
  display flex 
  flex-direction column 
  gap 8px

.groupTitle  
  color $grey-text

.group > input  
  box-sizing border-box

.wrapper  
  display flex 
  flex-direction column 
  gap 12px

.image  
  display flex 
  gap 20px 
  justify-content space-between 

.imageName  
  background-color $window-background-2
  padding 8px 16px 
  border-radius 5px 
  display grid 
  place-items center start 
  flex-grow 1 

.removeIcon  
  transform rotateZ(45deg)

.rightIcon  
  transform rotateZ(180deg) 
